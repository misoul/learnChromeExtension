{
  "name": "Vinh Hello Extensions",
  "description" : "Vinh Extension",
  "version": "1.9",
  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [ 
    {
        "matches": [
          "<all_urls>"
        ],
        "js": [
            "content.js"
        ],
        "all_frames": true
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "background",
    "contextMenus",
    "notifications"
  ]
}

